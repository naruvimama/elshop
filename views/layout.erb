<html>
	<head>
		<title>El Shop</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!--<link href="/css/bootstrap.min.css" rel="stylesheet"> -->
		<!-- <link href="/css/bootstrap-responsive.min.css" rel="stylesheet"> -->
		<!-- <link href="/css/custom.css" rel="stylesheet"> -->
		
        <link href="http://fonts.googleapis.com/css?family=Ubuntu:bold" rel="stylesheet" type="text/css">
		<link href="http://fonts.googleapis.com/css?family=Vollkorn" rel="stylesheet" type="text/css">

		<link href="/css/desktop.less" type="text/css" rel="stylesheet/less">
		<link href="/css/font-awesome.less" type="text/css" rel="stylesheet/less">

		<script src="/js/less-1.3.1.min.js" type="text/javascript"></script>
	</head>
	<body>
		<div class="all_enclosing">
			<div class="container">
				<% if logged_in? %>
					<a href="/admin/home"> Admin home </a>
				<%else%>
					<span><h2>El Shop</h2></span>
					<div id="cart_holder" class="shopping_cart_box">
						<h3>Your Cart</h3>
						<div id="cart_items" class="cart_items"></div>
						<div id="cart_total" class="cart_total"></div>
						<div id="cart_actions" class="cart_actions" style:"display:none">
							<a class="clear_cart_btn" href="/clearcart">Clear cart</a>
							<a class="checkout_btn" href="/checkout">Checkout</a>
						</div>
					</div>
				<%end%>
			</div>
			<div class="container">
				<%= yield %>
			</div>
		</div>
		<script rel="javascript" src="/jquery-1.8.0.min.js"></script>
		<!-- <script rel="javascript" src="/js/bootstrap.min.js"></script> -->
		<script rel="javascript" src="/custom.js"></script>
		<script rel="javascript" src="/cart.js"></script>
	</body>
</html>
